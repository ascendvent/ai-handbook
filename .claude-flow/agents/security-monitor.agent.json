{
    "name": "Security Monitor Agent",
    "trigger": [
        "workflow_run.completed"
    ],
    "condition": {
        "workflow": "security-scan.yml",
        "conclusion": "failure"
    },
    "actions": [
        {
            "type": "extract_issues_from_log",
            "severity": [
                "HIGH",
                "CRITICAL"
            ]
        },
        {
            "type": "create_bug_reports",
            "file_pattern": "docs/bugs/SECURITY-${vulnerability_id}.md",
            "format": "markdown",
            "include_severity": true
        },
        {
            "type": "append_to_file",
            "file": "docs/bugs/security-log.md",
            "format": "markdown_table",
            "title": "Security Scan Failure on ${date}"
        },
        {
            "type": "create_branch",
            "name": "hotfix/security-${hash}",
            "condition": "severity == 'CRITICAL'"
        },
        {
            "type": "open_pull_request",
            "base": "main",
            "title": "Hotfix: Address critical security issue",
            "body": "Auto-created from security monitor. Please patch immediately.",
            "condition": "severity == 'CRITICAL'"
        }
    ]
}